page {
  height: 100%;
  background-color: #f3f4f6;
}

.p10 {
  padding: 10rpx;
  border-bottom: indigo;
}

.product-price-wrap .product-price-new {
  color: #e80080;
  margin-left: 5px;
  font-weight: 900;
}

.product-price-wrap .product-price-old {
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
}

.product-price-wrap .discount {
  margin-left: 30px;
  background-color: #000;
  color: #fff;
}

.content-text {
  width: 316rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  font-family: 'PingFang SC';
  font-weight: 500;
  color: rgba(21, 21, 21, 1);
  margin-top: 11rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fea {
  position: relative;
  margin-top: 20rpx;
  height: 250rpx;
  border-radius: 0.5rem;
  overflow: hidden;
}

.featured {
  width: 171rpx;
  height: 59rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(0, 0, 0, 0.6);
  opacity: 0.7;
  border-radius: 10rpx 0rpx 10rpx 0rpx;
  position: absolute;
  top: 5rpx;
}

.banner-box-three {
  margin: 0 20rpx;
  display: flex;
  flex-direction:column;
  justify-content : space-between;
}
