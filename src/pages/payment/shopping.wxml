<view class="p20">
  <view>商铺名称:{{stoneName}}</view>
  <view>店铺地址:天津市</view>
  <view>店铺负责人:xxxx</view>
</view>
<view style="width:100%;height:5rpx;margin-top:-30rpx">
  <image src="/images/line.png" style="width:100%;height:100%;"></image>
</view>

<view class="p20">支付方式</view>
<view class="paymentMethod">
  <radio-group class="item-right radio-group" wx:for="{{paymentMethod}}" wx:key="index" bindchange="onPaymentMethod">
    <label class="radio">
      <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.desc}}
    </label>
  </radio-group>
</view>

<view class="p20">
    <view>支付金额</view>
    <input class="input" name="amount" placeholder="请和商家确认后输入金额" 
    bindinput="onInputPaymentAmount"/>
</view>

<view class="footer">
  <view style="font-size:40rpx;font-weight:bold;color:rgba(255,0,0,1);line-height:98rpx">
    ￥{{ amount + pickUp.freight }}
  </view>
  <view class="submit" bindtap="onCreateOrder" data-payment="{{ selectedGoods.sellPrice + pickUp.freight }}">确认支付</view>
</view>
