/* src/pages/myself/wallet/index.wxss */.nav {
  display: flex;
  justify-content: space-between;
  align-self: center;
  background-color: #f8f8f8;
  height: 150rpx;
  padding: 75rpx 20rpx 25rpx;
  box-sizing: border-box;
}
.nav image {
  display: block;
  margin-top: 10rpx;
  height: 40rpx;
  width: 40rpx;
}
.nav .titleright {
  height: 40rpx;
  width: 40rpx;
}

.pay-to {
  display: flex;
  justify-content: space-between;
  background-color: #f8f8f8;
  padding: 60rpx 20rpx;
}
.pay-to-left {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}
.pay-to-left .pay-to-left-top {
  font-size: 38rpx;
}
.pay-to-left .pay-to-left-bottom {
  font-size: 42rpx;
  font-weight: 600;
  margin-top: 15rpx;
}
.pay-to image {
  height: 110rpx;
  width: 110rpx;
}

.pay-num {
  padding: 60rpx;
}
.pay-num .numinput {
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  margin-top: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.pay-num .numinput .numtop {
  display: flex;
  align-items: center;
}
.pay-num .numBottom {
  margin-top: 50rpx;
  background-color: rgb(42, 187, 42);
  color: #fff;
}
.pay-num .numinput text{
  font-size: 60rpx;
  font-weight: 700;
  margin-right: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
}
.pop-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 200rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
}
.pop-top :nth-child(1) {
  font-size: 36rpx;
  font-weight: 700;
}
.pop-top :nth-child(2) {
  font-size: 30rpx;
  margin: 30rpx;
}
.pop-top :nth-child(3) {
  color: #ff0000;
  font-size: 50rpx;
  font-weight: 700;
}
.pay-way {
  display: flex;
  flex-direction: column;
  width: 100%;
}
.pay-way-bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.pay-way-bottom image {
  width: 265rpx;
  height: 265rpx;
  margin-top: 45rpx;
}
.pay-way-top {
  display: flex;
  justify-content: space-between;
  color: #444;
  font-size: 28rpx;
}
.pay-way-top-right {
  display: flex;
  align-items: center;
}
.pay-way-top-right image {
  width: 16rpx;
  height: 26rpx;
  margin-left: 10rpx;
}