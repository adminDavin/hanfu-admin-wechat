.content-card {
  width: 100%;
  height: 270rpx;
  margin-top: 20rpx;
  background: white;
  padding: 20rpx 24rpx 0 24rpx;
  box-sizing: border-box;
}

.xiajia-content {
  margin-bottom: 20rpx;
  width: 100%;
  height: 270rpx;
  display: flex;
  justify-content: flex-start;
}

.contentitem-right {
  width: 440rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 30rpx;
}

.item-name {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(21, 21, 21, 1);
}
.star-wrap{
  width:200rpx;
  height:33rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.star-item{
  width:33rpx;
  height:33rpx
}
