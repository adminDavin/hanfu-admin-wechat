<!--src/pages/discover/index.wxml-->
<view style="padding:20rpx;padding-bottom:200rpx;">
	<view wx:for="{{list}}" style="margin-bottom:20rpx; background:#fff;padding:21rpx 19rpx 18rpx 31rpx;border-radius:10px;">
		<view style="color:#999;font-size:24rpx;">
			{{item.time}}
		</view>
		<view style="font-size:28rpx;color:#151515;margin-top:19rpx;margin-bottom:17rpx;">{{item.discoverContent}}</view>
		<view wx:if="{{item.discoverType=='video'}}" style="display:flex;flex:1;justify-content:center;">
			<video style="height:320rpx;" id="myVideo" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400" enable-danmu danmu-btn controls></video>
		</view>
		<view wx:if="{{item.discoverType=='heart'}}" style="display:flex;flex:1;flex-wrap:wrap;">
			<image wx:for="{{item.fileId}}" wx:for-item="img_pic1" src="{{img}}/goods/getFile?fileId={{img_pic1}}" mode="widthFix"  style="margin-bottom:9rpx; width:23%;margin-right:10rpx;"></image>

		</view>
		<view style="margin-top:17rpx; display:flex;align-items:center;justify-content:space-around;">
			<view style="display:flex;align-items:center;">
				<image style="width:36rpx;height:36rpx;" src="../../img/fenxiang.png"></image>
				<text style="margin-left:10rpx; color:#151515;font-size:26rpx;">88</text>
			</view>
			<view style="display:flex;align-items:center;">
				<image style="width:36rpx;height:36rpx;" src="../../img/liuyan.png"></image>
				<text style="margin-left:10rpx; color:#151515;font-size:26rpx;">88</text>
			</view>
			<view style="display:flex;align-items:center;">
				<image style="width:36rpx;height:36rpx;" src="../../img/zanpress.png"></image>
				<text style="margin-left:10rpx; color:#151515;font-size:26rpx;">88</text>
			</view>
		</view>
	</view>

	<image bindtap="gosend" src="../../img/tianjiayin.png" style="position:fixed;right:30rpx;bottom:150rpx; width:100rpx;height:100rpx;"></image>
</view>