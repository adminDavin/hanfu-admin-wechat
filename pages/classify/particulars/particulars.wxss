.particulars {
    width: 750rpx;
    height: 100%;
    position: relative;
}
/* 图片 */
.header-images {
    width: 750rpx;
    height: 640rpx;
    position: relative;
    background-color: #fff;
}
.images-head {
    width: 750rpx;
    height: 640rpx;
}
.images-return {
    width: 57rpx;
    height: 57rpx;
    background:rgba(0,0,0,1);
    opacity:0.2;
    border-radius:50%;
    position: absolute;
    top: 57rpx;
    left: 21rpx;
}
.return {
    width: 14rpx;
    height: 27rpx;
    margin: 16rpx 24rpx 14rpx 19rpx;
}
swiper {
    width: 100%;
    height: 640rpx;
}
.images-index {
    width: 105rpx;
    height: 39rpx;
    position: absolute;
    bottom: 52rpx;
    right: 0;
    background:rgba(0,0,0,1);
    opacity:0.2;
    line-height: 39rpx;
    text-align: center;
    border-radius:20rpx 0 0 20rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(248,248,248,1);
}
/* 商品价格及名称 */
.productName {
    width: 100%;
    height: 253rpx;
    overflow: hidden;
}
.productName-box {
    height: 63rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 21rpx;
}
.productName-dollor {
    line-height: 63rpx;
    font-family: 'PingFang-SC-Regular';
    color: #FF0000;
}
.dollor {
    font-size: 36rpx;
    font-weight:bold;
    margin-left: 21rpx;
}
.money {
    font-size: 42rpx;
    font-weight:500;
    margin-left: 5rpx;
}
.money-del {
    font-size: 26rpx;
    font-weight:500;
    color: #999999;
    margin-left: 19rpx;
    text-decoration:line-through;
}
.news {
    width:65rpx;
    height:35rpx;
    line-height: 35rpx;
    text-align: center;
    padding: 0 10rpx;
    border:1rpx solid rgba(51,204,0,1);
    border-radius:10rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,204,0,1);
    margin-left: 19rpx;
}
.productName-collect {
    display: flex;
}
.collect-one {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.depreciate-image {
    width: 38rpx;
    height: 38rpx;
}
.depreciate-text {
    margin-top: 4rpx;
}
.collect-one {
    font-size: 22rpx;
    color: #151515;
    font-family:PingFang SC;
    font-weight:400;
}
.collect-margin {
    margin-left: 20rpx;
    margin-right: 21rpx;
}
.productName-box-two {
    height: 100rpx;
    display: flex;
    align-items:center;
    justify-content: space-between;
    margin-top: 30rpx;
    margin-left: 20rpx;
}
.productName-table {
    width:568rpx;
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:500;
    color:rgba(21,21,21,1);
}
.table-box {
    display: flex;
    /* width: 86rpx; */
    height: 31rpx;
}
.table-images {
    width: 31rpx;
    height: 31rpx;
}
.share {
    margin-left: 9px;
    margin-right: 20rpx;
    font-size:24rpx;
    font-family:'PingFang SC';
    font-weight:400;
    color:rgba(102,102,102,1);
}
/* 优惠项 */
.discounts {
    width: 100%;
    height: 98rpx;
    margin-top: 20rpx;
    background: pink;
    display: flex;
}
.discounts-title {
    line-height: 98rpx;
    font-size:28rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:rgba(21,21,21,1);
    margin-left: 23rpx;
}
.discounts-table {
    height: 35rpx;
    margin-top: 32rpx;
    border:1rpx solid rgba(255,0,0,1);
    border-radius:10rpx;
    font-size:24rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(255,0,0,1);
    padding:0 10rpx;
}
.table-left {
    margin-left: 24rpx;
}
.table-margin {
    margin-left: 20rpx;
}
/* 地址及已选 */
.site {
    width: 100%;
    height: 342rpx;
    margin-top: 20rpx;
    background: blue;
    overflow: hidden;
}
.site-selected {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 26rpx;
    margin-top: 24rpx;
    line-height: 26rpx;
}
.selected-box {
    margin-left: 23rpx;
}
.selected {
    font-size:28rpx;
    font-family:'PingFang SC';
    font-weight:500;
    color:rgba(21,21,21,1);
}
.selected-text {
    margin-left: 25rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(21,21,21,1);
}
.selected-images {
    width: 32rpx;
    height: 7rpx;
    margin-right: 22rpx;
}
/* 评价  */
.appraise {
    width: 100%;
    height: 451rpx;
    margin-top: 20rpx;
    background:green;
}
/* 商品详情 */
.description {
    width: 100%;
    height: 283rpx;
    margin-top: 20rpx;
    background: pink;
}
/* 底部 */
.footer {
    width: 750rpx;
    height: 98rpx;
    background: red;
    position: fixed;
    bottom: 0;
    left: 0;
}