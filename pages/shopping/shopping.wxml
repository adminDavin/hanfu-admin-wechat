<!--pages/shopping/shopping.wxml-->
<view class="commodity">
  <view class="editbtn">
    <view bindtap="edit">{{editshow==true?'编辑':'完成'}}</view>
    <view class="edit" style="color:white;padding-left:252rpx">购物车</view>
  </view>
  <!-- banner区域 -->
  <view class="commodity-banner" hidden="{{!tiphidden}}">
    <view class="table">
      <text class="" bindtap="toggle">全部(99)</text>
      <view class="sum-color colors"></view>
    </view>
    <view class="table jiangjia">
      <view class="">降价(0)</view>
      <view class="sum-color"></view>
    </view>
    <view class="table">
      <text class="">常买(99)</text>
      <view class="sum-color colors"></view>
    </view>
    <view class="table ">
      <view class="table-sum">
        <text class="" bindtap="translate">分类</text>
        <image src="../images/cart/xiala1.png" class="sai-image" />
      </view>
    </view>
  </view>
  <!-- content -->
  <view class="content" hidden="{{!tiphidden}}">
    <scroll-view scroll-x direction="horizonta" wx:for="{{cratList}}" wx:key="index">
      <view class="content-card">
        <view class="editpic">
        <view style="width:37rpx;height:37rpx" bindtap="checkstatus" data-check="{{item.check}}" data-goodsId="{{item.productId}}">
          <image src="../images/cart/selected.png" wx:if="{{item.check==1}}"></image>
          </view>
        </view>
        <view class="content-item">
          <image src="../images/cart/cartitem.png" style="width:230rpx;height:100%"></image>
          <view class="contentitem-right">
            <text class="item-name">{{item.productName}}</text>
            <view class="serve">
              <text>白色40x40cm</text>
              <view class="selectserve">选服务</view>
              <image style="width:20rpx;height:11rpx;margin-top:12rpx;" src="../images/cart/servexiala.png"></image>
            </view>
            <view class="hiddenxiala" hidden="{{servehidden}}">
              <view wx:for=""></view>
            </view>
            <view class="manjian">每满200减50</view>
            <view class="card-money">
              <view class="discounts-money">
                <text class="money-title">¥</text>
                <text class="money-number">{{item.productPrice}}</text>
                <image src="../images/tabs/vip.png" class="money-vip" />
              </view>
              <view class="subadd">
                <view style="width:20rpx;height:2rpx;background:black"></view>
                <view class="subadd-money">{{item.productNum}}</view>
                <image src="../images/cart/add.png" class="sub" />
              </view>
            </view>
          </view>
        </view>
        <view class="hid-item">
          <view style="width:50rpx;">设为常买</view>
        </view>
        <view class="hid-item" style="background:rgba(255,204,0,1);">
          <view style="width:50rpx;color:white">移入关注</view>
        </view>
        <view class="hid-item" style="background:rgba(255,0,0,1);">
          <view style="width:50rpx;color:white;margin-top:15rpx">删除</view>
        </view>
      </view>
    </scroll-view>
    <view class="xiajia">
      <view class="xiajia-top">
        <text style="font-size:28rpx;font-weight:500;color:rgba(21,21,21,1);">已下架商品（2）</text>
        <view class="xiajia-top-del">全部删除</view>
      </view>
      <view class="xiajia-content">
        <image src="../images/cart/cartitem.png" style="width:230rpx;height:230rpx"></image>
        <view class="contentitem-right" style="justify-content: flex-start;">
          <text class="item-name">夹克外套男秋冬季新款修身工装衣服男装加绒加厚学</text>
          <view class="serve">
            <text>白色40x40cm</text>
            <view class="selectserve">选服务</view>
            <image style="width:20rpx;height:11rpx;margin-top:12rpx;" src="../images/cart/servexiala.png"></image>
          </view>
          <view class="hiddenxiala" hidden="{{servehidden}}">
            <view wx:for=""></view>
          </view>
          <view class="card-money" style="margin-top:50rpx">
            <text style="font-size:24rpx;font-weight:400;color:rgba(21,21,21,1);">商品已不支持购买</text>
            <view class="kanxiangsi">看相似</view>
          </view>
        </view>
      </view>
      <view class="other">查看其它下架商品</view>
    </view>
  </view>
  <view class="jiesuan" hidden="{{!tiphidden}}">
    <view class="editpic"></view>
    <view style="color:rgba(51,51,51,1);font-size:28rpx">全选</view>
    <view style="color:rgba(51,51,51,1);font-size:28rpx;padding-left:180rpx">合计：</view>
    <view style="color:rgba(255,0,0,1);font-size:32rpx;font-weight:500">￥{{cartPrice}}</view>
    <view class="gojiesuan" wx:if="{{editshow}}" bindtap="submit">去结算(1)</view>
    <view class="gojiesuan" wx:if="{{!editshow}}">删除</view>

  </view>
  <!-- 购物车空时提示 -->
  <view class="tip" hidden="{{tiphidden}}">
    <image src="../images/cart/cart.png" class="cart-image" />
    <view class="abstip">
      <view class="bindtip">尚未添加商品</view>
      <view class="bindtip bindtip-right" bindtap="gobuy">前往购买</view>
    </view>
  </view>
</view>