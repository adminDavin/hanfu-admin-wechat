<view style="padding-top:19px;">
  <view wx:for="{{list}}" >
    <view style="color:#fff; margin-left:4%;margin-bottom:30rpx;">{{item.evaluateType}}</view>
    <view style="margin:0 auto;margin-bottom:60rpx; width:90%;border:1rpx solid #EADE8C;height:90px;border-radius:8rpx;padding-top:5px;padding-left:3px;">
      <textarea placeholder="请输入对自己的评价"  style="width:94%;height:100%;color:#fff;margin:0 auto;" data-index="{{index}}" data-id="{{item.id}}" value="{{item.evaluateContent}}"></textarea>
    </view>
  </view>
  <view  style="width:96%; color:#fff;display:flex;flex-wrap:wrap;margin-left:4%;position:fixed;bottom:100px;">
    <view  wx:for="{{list}}" wx:for-index="index" style="margin-bottom:20rpx; margin-right:3%; display:flex;align-items:center;flex-direction:column;width:21%;">
      <view>
        {{item.evaluateType}}
      </view>
      <view style="width:100%;height:50rpx;background:rgba(27,27,27,1);border:2px solid #F5E2AB;border-radius:10px;">
        <input type="number" style="color:#fff;text-align:center;" bindblur="getVal" data-index="{{index}}" placeholder="请评分"></input>
      </view>
    </view>
    
 
  </view>
  <view bindtap="tijiao" style="left:3.5%; display:flex;align-items:center;justify-content:center; margin:0 auto; width:690rpx;height:82rpx;background:linear-gradient(90deg,rgba(245,226,171,1),rgba(184,146,69,1));border:2px solid rgba(253, 255, 167, 1);border-radius:41px;position:fixed;bottom:40px;z-index:100;" >提交</view>

</view>