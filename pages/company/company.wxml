<view>
  <view style="margin:0 auto;margin-top:30%; display:flex;align-items:center; width:609rpx;height:90rpx;background:rgba(27,27,27,1);border:2px solid #F5E2AB;border-radius:45px;">
    <input placeholder="请输入公司编号" value="{{num}}" style="color:#fff;width:90%;margin-left:5%;" bindblur="num"></input>
  </view>

  <view>
    <view  bindtap="getnumber" style="padding：0 5%; margin:0 auto;margin-top:30rpx;display:flex;align-items:center; width:609rpx;height:90rpx;background:rgba(27,27,27,1);border:2px solid #F5E2AB;border-radius:45px;">
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" style="width:100%;height:90%;margin-left:30px;">
          <view  style="color:#fff;width:100%;height:100%;display:flex;align-items:center;justify-content:space-between;">
           <input value="{{index}}" placeholder="请选择部门" style="display:block; width:90%;height:46px"></input>
           <image src="../img/xiala.png" style="width:26px;height:15px;margin-right:30px;"></image>
          </view>
        </picker>
    </view>
</view>

  <view bindtap="submit" style="position:fixed;bottom:40px;left:3.5%; width:690rpx;height:90rpx;background:linear-gradient(90deg,rgba(245,226,171,1),rgba(184,146,69,1));border:1px solid rgba(253,255,167,1);border-radius:45px;display:flex;align-items:center;justify-content:center;">
    确定
  </view>
</view>