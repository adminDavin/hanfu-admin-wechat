<!--pages/order/order.wxml-->
<view class="order">
  <view class="address">
    <view class="address-top">
      <view class="moren">默认</view>
      <view style="font-size:24rpx;line-height:35rpx;font-weight:400;color:rgba(21,21,21,1);">{{addressList.hfProvince}}{{addressList.hhfCity}}</view>
    </view>
    <view class="address-center">
      <view style="font-size:30rpx;font-weight:bold;color:rgba(21,21,21,1);width:547rpx">{{addressList.hfAddressDetail}}</view>
      <image src="../images/cart/rightjiantou.png" style="width:16rpx;height:29rpx"></image>
    </view>
    <view class="address-bottom">{{addressList.contact}} {{addressList.phoneNumber}}</view>
  </view>
  <view style="width:100%;height:5rpx;margin-top:-30rpx">
    <image src="../images/cart/line.png" style="width:100%;height:100%;"></image>
  </view>
  <view class="quhuomethod" style="margin-top:50rpx">
    <view class="ziti" style="width:600rpx">取货方式</view>
    <text class="ziti">{{quhuomethod==true?'自提':'邮寄'}}</text>
    <image src="../images/cart/rightjiantou.png" style="width:12rpx;height:22rpx" bindtap="changeMethod"></image>
  </view>
  <view class="quhuomethod">
    <view class="ziti" style="width:520rpx">支付方式</view>
    <text class="ziti">微信支付</text>
    <image src="../images/cart/more.png" style="width:32rpx;height:7rpx"></image>
  </view>
  <view class="content-card">
    <view class="xiajia-content">
      <image src="../images/cart/cartitem.png" style="width:230rpx;height:230rpx"></image>
      <view class="contentitem-right" style="justify-content: flex-start;">
        <text class="item-name">夹克外套男秋冬季新款修身工装衣服男装加绒加厚学</text>
        <view class="serve">
          <text>白色40x40cm</text>
          <view class="selectserve">选服务</view>
          <image style="width:20rpx;height:11rpx;margin-top:12rpx;" src="../images/cart/servexiala.png"></image>
        </view>
        <view class="hiddenxiala" hidden="{{servehidden}}">
          <view wx:for="" wx:key="index"></view>
        </view>
        <view class="card-money" style="margin-top:50rpx">
          <view class="discounts-money">
            <text class="money-title">¥</text>
            <text class="money-number">800.00</text>
          </view>
          <view class="num">X1</view>
        </view>
      </view>
    </view>
  </view>
  <view class="quhuomethod" style="height:80rpx">
    <view class="ziti" style="width:520rpx;line-height:80rpx">优惠券</view>
    <text class="ziti" style="line-height:80rpx">无可用</text>
    <image src="../images/cart/more.png" style="width:32rpx;height:7rpx"></image>
  </view>
  <view class="youjicard">
  <view class="youji">
    <view class="ziti" style="line-height:80rpx">商品金额</view>
    <text class="ziti" style="line-height:80rpx">￥800.00</text>
  </view>
  <view class="youfei" hidden="{{quhuomethod}}">
      <view class="ziti" style="line-height:40rpx">邮费</view>
    <text class="ziti" style="line-height:40rpx;color:red;">+￥0.00</text>
  </view>
  </view>
  <view class="quhuomethod" style="height:80rpx">
    <view class="ziti" style="width:400rpx;line-height:80rpx">备注</view>
    <view class="ziti" style="width:230rpx;line-height:80rpx;text-overflow:ellipsis;white-space:nowrap;overflow:hidden">备注内容备注内容sfavfdsvfsef</view>
    <image src="../images/cart/rightjiantou.png" style="width:12rpx;height:22rpx"></image>
  </view>
  <view class="footer">
    <view style="font-size:40rpx;font-weight:bold;color:rgba(255,0,0,1);line-height:98rpx">￥800.00</view>
    <view class="submit" bindtap="submit">提交订单</view>
  </view>
</view>