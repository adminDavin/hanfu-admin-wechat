<!--pages/evaluate/evaluateList/evaluateList.wxml-->

  

<view class="evaluate-list">
  <view class="evaluate-item">
    <image class="left" src="/pages/images/handpick/07fbbc84987980b7.jpg!cc_350x449.png"></image>
    <view class="right">
      <text>夹克外套男秋冬季新款修身工装衣服男装加绒加厚学生春秋季上衣青...</text>
      <van-rate
        value="{{ value }}"
        size="40rpx"
        color="#ff0000"
        void-color="#eee"
        void-icon="star"
      />
    </view>
  </view>
  <view class="inputText" wx:for="{{listArr}}" wx:key="index" data-orderid="{{item.ordersId}}">
    <van-field
      value="{{ item.data }}"
      type="textarea"
      placeholder="点击写出您的感受，可以帮助更多小伙伴哦~"
      autosize
      border="{{false}}"
    />
  </view>

  <van-uploader file-list="{{ fileList }}" />
</view>
 <text class="submit" bindtap='comment'>提交</text>