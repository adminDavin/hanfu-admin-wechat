.mydingdan {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.nav {
  width: 100%;
  height: 88rpx;
  padding: 18rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  background-color: white;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.nav-ziti {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(21, 21, 21, 1);
}

.hengxian {
  width: 34rpx;
  height: 6rpx;
  background-color: red;
}

/* card */

.card {
  width: 100%;
  height: 360rpx;
  margin-top: 20rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  background-color: white;
}

.card-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.dingdanhao {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.card-center {
  width: 100%;
  height: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.danshop {
  width: 70%;
  height: 170rpx;
  display: flex;
}

.danshop-name {
  width: 336rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(21, 21, 21, 1);
}

.center-right {
  width: 180rpx;
  height: 100%;
  padding: 54rpx 0;
  box-sizing: border-box;
}

.card-pic {
  width: 170rpx;
  height: 170rpx;
  display: inline-block;
  margin-right: 20rpx;
}

/* card-bottom */

.card-bottom {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.shenqing {
  width: 160rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(153, 153, 153, 1);
  border-radius: 25rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-left: 30rpx;
  font-family: PingFang SC;
}
