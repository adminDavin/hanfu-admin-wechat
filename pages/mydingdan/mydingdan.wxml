<view class="mydingdan">
  <view class="nav">
    <view class="nav-item" data-id="1" bindtap="toggle">
      <view class="nav-ziti">全部</view>
      <view class="{{navid==1?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="2" bindtap="toggle">
      <view class="nav-ziti">待付款</view>
      <view class="{{navid==2?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="3" bindtap="toggle">
      <view class="nav-ziti">待提货</view>
      <view class="{{navid==3?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="4" bindtap="toggle">
      <view class="nav-ziti">待收货</view>
      <view class="{{navid==4?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="5" bindtap="toggle">
      <view class="nav-ziti">已完成</view>
      <view class="{{navid==5?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="6" bindtap="toggle">
      <view class="nav-ziti">已取消</view>
      <view class="{{navid==6?'hengxian':''}}"></view>
    </view>
  </view>
  <view class="card">
    <view class="card-top">
      <view class="dingdanhao">订单号：123456789</view>
      <view style="color:red;font-size:24rpx" hidden="true">等待发货</view>
      <view style="display:flex;align-items:center">
      <view style="font-size:24rpx;color:rgba(153,153,153,1);margin-right:5rpx" hidden="true">已取消</view>
      <image src="../images/cart/shanchu.png" style="width:27rpx;height:25rpx"></image>
      </view>
    </view>
    <view class="card-center">
      <scroll-view  scroll-x="true" style="width: 70%;" hidden="true">
        <view style="white-space: nowrap;">
          <image src="../images/cart/cartitem.png" class="card-pic"></image>
          <image src="../images/cart/cartitem.png" class="card-pic"></image>
          <image src="../images/cart/cartitem.png" class="card-pic"></image>
          <image src="../images/cart/cartitem.png" class="card-pic"></image>
        </view>
      </scroll-view>
      <view class="danshop">
          <image src="../images/cart/cartitem.png" class="card-pic"></image>
        <view class="danshop-name">皮夹克</view>
      </view>
      <view class="center-right">
        <view style="font-size:34rpx;font-weight:500;color:rgba(21,21,21,1);text-align:center">￥800.00</view>
        <view style="font-size:24rpx;color:rgba(153,153,153,1);text-align:center">共3件</view>
      </view>
    </view>
    <view class="card-bottom">
      <view class="shenqing" hidden="true">申请售后</view>
      <view class="shenqing" hidden="true">申请退款</view>
      <view class="shenqing">评价晒单</view>
      <view class="shenqing" style="color:red;border-color:red" hidden="true">再次购买</view>
      <view class="shenqing" style="color:red;border-color:red" hidden="true">提醒发货</view>
      <view class="shenqing" style="color:red;border-color:red" bindtap="hexiao">提货核销</view>
    </view>
  </view>
</view>