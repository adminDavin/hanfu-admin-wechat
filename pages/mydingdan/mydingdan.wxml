<view class="mydingdan">
  <view class="nav">
    <view class="nav-item" data-id="1" bindtap="toggle">
      <view class="nav-ziti">全部</view>
      <view class="{{navid==1?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="2" bindtap="toggle">
      <view class="nav-ziti">待付款</view>
      <view class="{{navid==2?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="3" bindtap="toggle">
      <view class="nav-ziti">待提货</view>
      <view class="{{navid==3?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="4" bindtap="toggle">
      <view class="nav-ziti">待收货</view>
      <view class="{{navid==4?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="5" bindtap="toggle">
      <view class="nav-ziti">已完成</view>
      <view class="{{navid==5?'hengxian':''}}"></view>
    </view>
    <view class="nav-item" data-id="6" bindtap="toggle">
      <view class="nav-ziti">已取消</view>
      <view class="{{navid==6?'hengxian':''}}"></view>
    </view>
  </view>
  <view class="card" wx:for="{{productlist}}" wx:key="index">
    <view class="card-top" bindtap="godetail" data-orderid="{{item.orderDetailId}}" data-orderstatus="{{item.orderDetailStatus}}">
      <view class="dingdanhao">订单号：{{item.ordersId}}</view>
      <view style="color:red;font-size:24rpx" wx:if="{{item.orderDetailStatus=='待发货'}}">等待发货</view>
      <view style="color:red;font-size:24rpx" wx:if="{{item.orderDetailStatus=='待支付'}}">等待付款</view>
      <view style="color:red;font-size:24rpx" wx:if="{{item.orderDetailStatus=='待收货'}}">等待收货</view>
      <view style="color:red;font-size:24rpx" wx:if="{{item.orderDetailStatus=='待提货'}}">等待自提</view>
      <view style="color:red;font-size:24rpx" wx:if="{{item.orderDetailStatus=='退款中'}}">退款中</view>
      <view style="color:red;font-size:24rpx" wx:if="{{item.orderDetailStatus=='已完成'}}">已完成</view>
      <view style="font-size:24rpx;color:rgba(153,153,153,1);margin-right:5rpx" wx:if="{{item.orderDetailStatus=='已取消'}}">已取消</view>
      <view style="font-size:24rpx;color:rgba(153,153,153,1);margin-right:5rpx" wx:if="{{item.orderDetailStatus=='已退款'}}">已退款</view>
    </view>
    <view class="card-center">
      <view class="danshop">
        <image src="{{item.img}}" class="card-pic"></image>
        <view class="danshop-name">{{item.hfName}}</view>
      </view>
      <view class="center-right">
        <view style="font-size:34rpx;font-weight:500;color:rgba(21,21,21,1);text-align:center">￥{{item.amount}}</view>
        <view style="font-size:24rpx;color:rgba(153,153,153,1);text-align:center">共{{item.purchaseQuantity}}件</view>
      </view>
    </view>
    <view class="card-bottom">
      <view class="shenqing" style="color:white;background:red;border:none" wx:if="{{item.orderDetailStatus=='待支付'}}" bindtap="gopay" data-orderid="{{item.orderId}}" data-price="{{item.amount}}">去支付</view>
      <!-- <view class="shenqing" wx:if="{{item.orderDetailStatus=='已完成'}}">申请售后</view> -->
      <view class="shenqing" wx:if="{{item.orderDetailStatus=='待收货' }}" bindtap="wuliu" data-orderid="{{item.orderDetailId}}" data-logisticscompany="{{item.logisticsCompany}}" data-logisticsordersid="{{item.logisticsOrdersId}}">查看物流</view>
      <view class="shenqing" style="color:red;border-color:red" wx:if="{{item.orderDetailStatus=='待收货'}}" bindtap="querenshouhuo" data-orderid="{{item.orderDetailId}}">确认收货</view>
      <view class=" shenqing " wx:if="{{item.orderDetailStatus=='待发货' ||item.orderDetailStatus=='待提货'}}" bindtap="tuikuan" data-orderid="{{item.orderDetailId}}" data-price="{{item.amount}}">申请退款</view>
      <view class="shenqing " wx:if="{{item.orderDetailStatus=='已完成' }}" bindtap="pingjia" data-orderid="{{item.orderDetailId}}">评价晒单</view>
      <!-- <view class="shenqing" style="color:red;border-color:red" wx:if="{{item.orderDetailStatus=='已完成'||item.orderDetailStatus=='已取消'}}" data-goodsid="{{item.googsId}}" bindtap="againbuy">再次购买</view> -->
      <view class=" shenqing " style="color:red;border-color:red " wx:if="{{item.orderDetailStatus=='待发货' }}" bindtap="tixing">提醒发货</view>
      <view class="shenqing " style="color:red;border-color:red " wx:if="{{item.orderDetailStatus=='待提货' }}" bindtap="hexiao " data-orderid="{{item.ordersId}} ">提货核销</view>
    </view>
  </view>
  <!-- <view style="width:100%;margin-top:300rpx;font-size:28rpx;text-align:center; " wx:if="{{tipshow==true}} ">还没有订单呦</view> -->
</view>